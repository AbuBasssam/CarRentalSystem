{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "BackgroundServices": {
    "AuthTokenCleanup": {
      "Enabled": true,
      "IntervalHours": 24,
      "RetentionDaysAfterExpiry": 7,
      "BatchSize": 1000,
      "RunAt": "03:00"
    },
    "PasswordResetTokenCleanup": {
      "Enabled": true,
      "IntervalHours": 6,
      "TokenValidityMinutes": 15,
      "RetentionDaysAfterExpiry": 30,
      "BatchSize": 500,
      "RunAt": null
    },
    "UnverifiedUserCleanup": {
      "Enabled": true,
      "IntervalHours": 12,
      "UnverifiedRetentionHours": 24,
      "BatchSize": 100,
      "RunAt": "02:00"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "override": {
        "Microsoft": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "ConnectionString": "%DB_CONNECTION_STRING%",
          "TableName": "SystemLogs",
          "AutoCreateSqlTable": true
        }
      }
    ]
  }
}
